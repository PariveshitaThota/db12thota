extends layout

block content
  h1= title

  - let flowerid = toShow._id
  - let flowertype = toShow.type
  - let flowercolour  = toShow.colour
  - let flowercost = toShow.cost
  
  div.row(class='mb-2')
    div.mr-1 ID is
    div #{flowerid}
  - let actionid = "/resource/flower/" + flowerid
  form(id='flowerForm', action= actionid, method="PUT")
    div.form-group
        label.costumeAttr(for='flowertype') flowertype
        input#flowertype(type='text', name='flowertype')
    div.form-group
        label.costumeAttr(for='flowercolour') flowercolour
        input#flowercolour(type='text', name='flowercolour')
    div.form-group
        label.costumeAttr(for='flowercost') flowercost
        input#flowercost(type='text', name='flowercost')
    input(type="submit")

  script.
    document.forms['flowerForm'].addEventListener('submit', (event) => {
      event.preventDefault();
      console.log(event.target)
      // TODO do something here to show user that form is being submitted
      fetch(event.target.action, {
        method: 'PUT',
        body: new URLSearchParams(new FormData(event.target)) // event.target is the form
      }).then((resp) => {
        return resp.json(); // or resp.text() or whatever the server sends
      }).then((body) => {
        alert("Update succeded")
        // TODO handle body
      }).catch((error) => {
        // TODO handle error
        alert("Update failed " + error )
      });
    });