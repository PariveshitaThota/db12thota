extends layout

block content
  h1= title
    - let flower=results;
    - console.log(flower)
    div(class="container-fluid mt-3")
    div(class="row m-1")
      each form in flower
       - let destination=`buy(\"/flower/update?id=${form._id}\")`
       div(class="col-sm-6 m-1 p-3") Flower #{form.type} - #{form.colour} - #{form.cost}
        button.btn( class="btn-primary ml-2", onclick=destination ) Update

    script.
      function buy(path){
        window.location.href=path;
      }

