extends layout

block content
  h1(id="newtitle")= title

  if (toShow == null)
    h3 No instance to delete

  - let flowerid = toShow._id
  - let flowertype = toShow.type
  - let flowercolour = toShow.colour
  - let flowercost = toShow.cost

  div
    div.row
      div(class='costumeAttr mr-3') flower ID is:
      div(class='value specialstyles') #{flowerid}
    div.row
      div(class='costumeAttr mr-3') flower Type is:
      div(class="values") #{flowertype}
    div.row
      div(class='costumeAttr mr-3') flower colour is:
      div(class="values") #{flowercolour}
    div.row
      div(class='costumeAttr mr-3') flower cost is:
      div(class="values") #{flowercost}
    